<a href="<%= user_posts_path(@user) %>">
  <button class="custom-back-btn">â¬…</button>
</a>

<div class="custom-post-container">
  <h2>Post <%= "#" + @post.id.to_s %> by <%= @user.name %></h2>
  <div class='custom-post-interactions'>
    <span>Comments: <%= @post.commentsCounter %>,</span>
    <span>Likes: <%= @post.likesCounter %></span>
  </div>
  <p><%= @post.text %></p>
  <div class='custom-like-section'>
    <% if current_user.liked?(@post) %>
      <%= button_to "Unlike", user_post_unlike_path(@user, @post), method: :delete, remote: true %>
    <% else %>
      <%= button_to "Like", user_post_like_path(@user, @post), method: :post, remote: true %>
    <% end %>
  </div>
</div>

<div class="custom-post-container">
  <h3>Comments:</h3>
  <% if @post.comments.present? %>
    <% @post.comments.each do |comment| %>
      <div class="custom-post-comments">
        <span><%= comment.user.name %>:</span>
        <span><%= comment.text %></span>
      </div>
    <% end %>
  <% else %>
    <p>No comments yet.</p>
  <% end %>
</div>

<a href="<%= new_user_post_comment_path(@user, @post) %>">
  <button id="back-btn">Add a comment</button>
</a>
